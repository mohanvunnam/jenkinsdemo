// Import the Groovy JsonSlurper module
import groovy.json.JsonSlurper
// KV function takes jsonstring input and returns Key/Value Output
def KV(jsonInput){
def json = new groovy.json.JsonSlurper().parseText(jsonInput)
String kv = json.collect{“${it.key}=${it.value}”}.join(‘,’)
return kv
}
// Create Static Jsonstring for input
jsonstring = ‘{“Key”:”Value”, “Key2”:”Value2", “Owner”:”Veeresh Kumar”}’
// Call KV function by passing jsonstring as input and store output in kv variable
kv=KV(jsonstring)
// Print the Static jsonsring content
println “JsonString: ${jsonstring}”
// Print converted jsonstring kv variable value
println “Key/Value: ${kv}”
