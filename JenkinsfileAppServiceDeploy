//import groovy.json.JsonSlurper

pipeline {
    agent any
    stages {
	stage('print Environment') {
	   steps {
		script {
		envi = ENVIRONMENT
		echo "Got  httpq as ${envi}"
		       }
		 }
	      			 }
       stage('Read the variables of service and versions') {
          steps {
                script {
		def datas = readYaml file: 'service.yml'
		httpq1=datas.'envi'.httpq
		webhook1=datas.'envi'.webhook
		apimgr1=datas.'envi'.apimgr
                echo "Got  httpq as ${httpq1}"
                echo "Got  webhook as ${webhook1}"
                echo "Got  appmgr as ${appmgr1}"
                       }
                }
                                                                }
       stage('Execute based on Environment') {
          steps {
                script {
			if (ENVIRONMENT == 'prod') {
                        	echo 'I only execute on the $ENVIRONMENT branch'
	                    } else {
        	                echo 'I execute elsewhere'
                	    	   }
                       }
                }
                                                                }



}
}
